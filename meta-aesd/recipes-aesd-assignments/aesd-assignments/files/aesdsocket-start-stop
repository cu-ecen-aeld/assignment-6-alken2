#!/bin/sh

case "$1" in
  start|"")
    /usr/bin/aesdsocket -d
    ;;
  stop)
    killall aesdsocket 2>/dev/null || true
    ;;
  restart)
    killall aesdsocket 2>/dev/null || true
    /usr/bin/aesdsocket -d
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0